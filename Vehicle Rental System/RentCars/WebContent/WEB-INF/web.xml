<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>UserManagement</display-name>
  
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/Error.jsp</location>
  </error-page>
  
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- login -->
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>travelTrooveRentCars.web.Login</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- Servlet Mapping -->
<servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>travelTrooveRentCars.web.Logout</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
</servlet-mapping>

  
  <!-- Customer -->
  <servlet>
    <servlet-name>CustomerServlet</servlet-name>
    <servlet-class>travelTrooveRentCars.web.CustomerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CustomerServlet</servlet-name>
    <url-pattern>/insertCustomer</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>list_customer</servlet-name>
    <servlet-class>travelTrooveRentCars.web.CustomerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CustomerServlet</servlet-name>
    <url-pattern>/list_customer</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>updateCustomer</servlet-name>
    <servlet-class>travelTrooveRentCars.web.CustomerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CustomerServlet</servlet-name>
    <url-pattern>/updateCustomer</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>editCustomer</servlet-name>
    <servlet-class>travelTrooveRentCars.web.CustomerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CustomerServlet</servlet-name>
    <url-pattern>/editCustomer</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>newCustomer</servlet-name>
    <servlet-class>travelTrooveRentCars.web.CustomerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CustomerServlet</servlet-name>
    <url-pattern>/newCustomer</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>deleteCustomer</servlet-name>
    <servlet-class>travelTrooveRentCars.web.CustomerServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>CustomerServlet</servlet-name>
    <url-pattern>/deleteCustomer</url-pattern>
  </servlet-mapping>
  
</web-app>
